{{> layout/header-admin}}
<style>

    /* 카드 컴포넌트 스타일 */
    .card {
        border: 1px solid #ddd;
        border-radius: 5px;
        padding: 15px;
        margin: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    /* 카드 헤더 스타일 */
    .card-header {
        font-size: 1.5em;
        font-weight: bold;
        margin-bottom: 15px;
        border-bottom: 1px solid #ddd;
        padding-bottom: 10px;
    }

    /* 카드 바디 스타일 */
    .card-body {
        overflow-x: auto;
    }

    /* 테이블 스타일 */
    .table {
        width: 100%;
        margin-bottom: 15px;
        border-collapse: collapse;
    }

    .table th, .table td {
        padding: 8px;
        text-align: left;
        border: 1px solid #ddd;
    }

    .table th {
        background-color: #f4f4f4;
    }
</style>

<!-- 메인 화면 -->
<div class="container mt-5">
    <h2>매출 관리</h2>
    <hr>
    <div class="card mt-4">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center">
                <div class="mr-5">
                    <table class="table table-bordered">
                        <tbody>
                        <tr>
                            <th scope="row">META BOX</th>
                            <td>극장 정보</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- 브랜드별 매출 목록 -->
            <table class="table">
                <thead>
                <tr>
                    <th>극장 이름</th>
                    <th>극장 주소</th>
                    <th>극장 번호</th>
                    <th>총 매출액</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td>{{model.theaterName}}</td>
                    <td>{{model.address}}</td>
                    <td>{{model.theaterTel}}</td>
                    <td>{{model.totalTheaterSales}}</td>
                </tr>
                </tbody>
            </table>
            <hr>
            <div class="d-flex justify-content-between align-items-center">
                <div class="mr-5">
                    <table class="table table-bordered">
                        <tbody>
                        <tr>
                            <th scope="row">META BOX</th>
                            <td>영화별 매출</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <table class="table">
                <thead>
                <tr>
                    <th>영화 이름</th>
                    <th>상영 시작일</th>
                    <th>상영 종료일</th>
                    <th>관객 수</th>
                    <th>판매 금액</th>
                </tr>
                </thead>
                <tbody>
                {{#model.movieSalesList}}
                    <tr>
                        <td>{{movieName}}</td>
                        <td>{{startDate}}</td>
                        <td>{{endDate}}</td>
                        <td>{{viewerCount}}</td>
                        <td>{{totalMovieSales}}</td>
                    </tr>
                {{/model.movieSalesList}}
                </tbody>
            </table>
        </div>
    </div>
</div>

{{> layout/footer}}
