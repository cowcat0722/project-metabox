        padding: 5px;
    }

    .date-pagination .arrow {
        cursor: pointer;
    }

    .button-container {
        display: flex;
        justify-content: center;
        margin-top: 20px;
    }

    .button-container .btn1 {
        background-color: #ff4d4d;
        color: white;
        border: none;
        border-radius: 0px;
        cursor: pointer;
        display: flex;
        align-items: center;
    }
</style>
