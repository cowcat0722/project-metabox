<style>
    .container1 {
        margin-top: 50px;
        background-color: #353234;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
        color: white;
    }

    .header {
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 20px;
    }

    .input-group {
        display: flex;
        justify-content: space-between;
        margin-bottom: 20px;
    }

    .input-group input {
        width: 18%;
        padding: 10px;
        border: 1px solid #555;
        border-radius: 5px;
        background-color: #555;
        color: white;
    }

    .input-group .add-btn {
        width: 5%;
        padding: 10px;
        border: 1px solid #555;
        border-radius: 5px;
        background-color: #555;
        color: white;
        text-align: center;
        cursor: pointer;
    }

    .regions {
        display: flex;
        justify-content: space-between;
        margin-bottom: 10px;
    }

    .regions div {
        cursor: pointer;
    }

    .theaters {
        display: flex;
        flex-wrap: wrap;
    }

    .theaters div {
        margin-right: 10px;
        margin-bottom: 10px;
        cursor: pointer;
    }

    .schedule {
        background-color: white;
        padding: 20px;
        border-radius: 10px;
        color: black;
    }

    .schedule .movie {
        margin-bottom: 20px;
    }

    .schedule .movie h3 {
        margin-bottom: 10px;
    }

    .schedule .movie .times {
        display: flex;
        flex-wrap: wrap;
    }

    .schedule .movie .times .timeitems {
        border-radius: 0px;
        border: 1px solid #a7a5a5;
        cursor: pointer;
        padding: 5px 10px;
        text-align: center;
        font-size: 12px;
        font-weight: bold;
    }

    .date-pagination {
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 20px 0;
    }

    .date-pagination div {
        margin: 0 10px;
        cursor: pointer;
    }

    .date-pagination .selected {
        font-weight: bold;
        border: 2px solid black;
        padding: 5px;
    }

    .date-pagination .arrow {
        cursor: pointer;
    }

    .button-container {
        display: flex;
        justify-content: center;
        margin-top: 20px;
    }

    .button-container .btn1 {
        background-color: #ff4d4d;
        color: white;
        border: none;
        border-radius: 0px;
        cursor: pointer;
        display: flex;
        align-items: center;
    }
</style>

