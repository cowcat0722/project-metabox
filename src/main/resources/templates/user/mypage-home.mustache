<style>
    /* 기존 스타일 유지 */
    .container {
        background-color: #fff;
        font-family: 'Arial', sans-serif;
    }
    .profile-card {
        max-width: 100%;
        margin: 20px 10px;
        padding: 30px;
        background-color: #f8f9fa;
        border: 1px solid #ddd;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        text-align: left;
    }

    .profile-card img {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        background-color: #ddd;
    }
    .profile-card .header {
        display: flex;
        align-items: center;
        margin-bottom: 20px;
    }
    .profile-card .header .info {
        margin-left: 20px;
    }
    .profile-card .header .info h3 {
        margin: 0;
        font-weight: 600;
    }
    .profile-card .header .info p {
        margin: 5px 0;
    }
    .profile-card .points, .profile-card .vip-points {
        margin-bottom: 20px;
    }
    .profile-card .points h4, .profile-card .vip-points h4 {
        font-weight: bold;
        display: flex;
        justify-content: space-between;
    }
    .profile-card .points p, .profile-card .vip-points p {
        margin: 0;
        font-size: 1rem;
    }
    .profile-card .grid {
        display: flex;
        justify-content: space-between;
        margin-top: 20px;
    }
    .profile-card .grid div {
        flex: 1;
        margin: 0 5px;
        border: 1px solid #ddd;
        border-radius: 5px;
        height: 100px;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #f1f1f1;
    }
    .profile-card .grid .setting {
        background-color: #4E0929;
        color: white;
        font-size: 0.9rem;
        cursor: pointer;
    }
    .content-section {
        padding: 20px;
    }
    .content-section h5 {
        margin-bottom: 20px;
        font-weight: bold;
    }
    .content-section .row div {
        border: 1px solid #ddd;
        border-radius: 5px;
        padding: 20px;
        text-align: center;
        background-color: #fff;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.05);
        transition: transform 0.3s;
    }
    .content-section .row div:hover {
        transform: translateY(-5px);
        cursor: pointer;
    }
    .content-section .row div h6 {
        margin-top: 10px;
        font-weight: bold;
    }
    .content-section p {
        font-size: 0.9rem;
        color: #6c757d;
    }

    .boxed {
        border: 1px solid #ddd; /* 테두리 설정 */
        padding: 20px; /* 내용물과 테두리 사이의 여백 */
        border-radius: 5px; /* 모서리 둥글게 */
        background-color: #f9f9f9; /* 배경색 설정 */
        text-align: center;
    }

    /* + 버튼 */
    .add-button {
        display: inline-block;
        width: 24px; /* 크기 조정 */
        height: 24px; /* 크기 조정 */
        border: 1px solid #ccc;
        border-radius: 50%;
        text-align: center;
        line-height: 22px; /* 중앙 정렬 */
        margin-left: 10px;
        cursor: pointer;
        background-color: #f4f4f4; /* 배경색 추가 */
        color: #333; /* 글자색 설정 */
        font-weight: bold; /* 글자 두껍게 */
        transition: background-color 0.3s, box-shadow 0.3s; /* 부드러운 전환 효과 */
    }

    .add-button:hover {
        background-color: #ddd; /* 호버 시 배경색 변경 */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* 호버 시 그림자 추가 */
    }

    .modal {
        display: none;
        position: fixed;
        z-index: 1;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        overflow: auto;
        background-color: rgba(0, 0, 0, 0.4);
    }

    .modal-content {
        background-color: #fff;
        margin: 15% auto;
        padding: 20px;
        border: 1px solid #888;
        width: 80%;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        animation: fadeIn 0.5s;
    }

    .close {
        color: #aaa;
        float: right;
        font-size: 28px;
        font-weight: bold;
    }

    .close:hover,
    .close:focus {
        color: black;
        text-decoration: none;
        cursor: pointer;
    }

    .tab {
        display: flex;
        cursor: pointer;
        padding: 10px;
        background-color: #f1f1f1;
        margin-bottom: 10px;
    }

    .tab div {
        flex: 1;
        text-align: center;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 5px;
    }

    .tab div.active {
        background-color: #ddd;
        font-weight: bold;
    }

    .tab-content {
        display: none;
    }

    .tab-content.active {
        display: block;
    }

    .theater-list {
        display: flex;
        flex-wrap: wrap;
    }

    .theater-list div {
        flex: 1;
        margin: 5px;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 5px;
        text-align: center;
        background-color: #f9f9f9;
        cursor: pointer;
    }

    .selected-theater {
        display: flex;
        flex-wrap: wrap;
        margin-top: 20px;
    }

    .selected-theater div {
        flex: 1;
        margin: 5px;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 5px;
        text-align: center;
        background-color: #e9ecef;
        position: relative;
    }

    .selected-theater .delete-button {
        position: absolute;
        top: 5px;
        right: 5px;
        border: none;
        background: none;
        font-size: 18px;
        cursor: pointer;
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
        }
        to {
            opacity: 1;
        }
    }
</style>

