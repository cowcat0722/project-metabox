<script>
    let theaterList = [
        {id: 1, name: "메타박스 강남"},
        {id: 2, name: "메타박스 강변"}
    ];
    let movieList = [
        {id: 1, name: "스파이더맨"},
        {id: 2, name: "인사이드아웃2"},
        {id: 3, name: "밤낚시"},
    ];
    let timeList = [
        {id: 1, name: "12:00"},
        {id: 2, name: "15:00"},
        {id: 3, name: "18:00"},
    ];

    function b1(loc) {
        theaterRender(loc);
    }

    function theaterRender(loc) {
        $("#box2").empty();
        $("#box3").empty();
        $("#box4").empty();
        // fetch 통신 - json -> js object -> theaterList (id로 통신)

        theaterList.forEach((t) => {
            $("#box2").append(`<div class="onclickbtn" onclick="movieRender(${t.id})">${t.name}</div>`);
        });
    }

    function movieRender(id) {
        $("#box3").empty();
        $("#box4").empty();
        // fetch 통신 - json -> js object -> movieList (id로 통신)
        movieList.forEach((t) => {
            $("#box3").append(`<div class="onclickbtn" onclick="timeRender(${t.id})">${t.name}</div>`);
        });
    }

    function timeRender() {
        $("#box4").empty();
// fetch 통신 - json -> js object -> movieList (id로 통신)
        timeList.forEach((t) => {
            $("#box4").append(`<div class="onclickbtn" onclick="complete(${t.id})">${t.name}</div>`);
        });
    }

    function complete(id) {
        alert(id);
        location.href = "특정페이지로 이동";
    }

</script>

