<script>
    document.addEventListener('DOMContentLoaded', function () {
        const mainList = document.getElementById('main-list');
        const subList = document.getElementById('sub-list');
        const movieList = document.getElementById('movie-list');
        const dateList = document.getElementById('date-list');
        const scheduleList = document.getElementById('schedule-list');
        const selectSeatButton = document.getElementById('select-seat-button');

        let selectedMain = '';
        let selectedSub = '';
        let selectedMovie = '';
        let selectedDate = '';
        let selectedSchedule = '';

        mainList.addEventListener('click', function (event) {
            if (event.target.tagName === 'LI') {
                const options = event.target.getAttribute('data-options').split(', ');
                subList.innerHTML = ''; // 이전 옵션들을 지웁니다
                movieList.innerHTML = ''; // 이전 영화를 지웁니다
                dateList.innerHTML = ''; // 이전 날짜를 지웁니다
                scheduleList.innerHTML = ''; // 이전 시간표를 지웁니다
                selectedMain = event.target.textContent;

                // 선택된 항목을 강조 표시합니다
                document.querySelectorAll('#main-list .list-group-item').forEach(item => item.classList.remove('active', 'selected'));
                event.target.classList.add('active', 'selected');

                options.forEach(option => {
                    const listItem = document.createElement('li');
                    listItem.className = 'list-group-item';
                    listItem.textContent = option;
                    listItem.setAttribute('data-movies', '인사이드아웃2, 하이재킹, 북극백화점의안내원, 핸섬가이즈,프리실라, 드라이브, 캣퍼슨, 타로, 존오브인터레스트');
                    subList.appendChild(listItem);
                });

                updateSelectedInfo();
            }
        });

        subList.addEventListener('click', function (event) {
            if (event.target.tagName === 'LI') {
                const movies = event.target.getAttribute('data-movies').split(', ');
                movieList.innerHTML = ''; // 이전 영화를 지웁니다
                dateList.innerHTML = ''; // 이전 날짜를 지웁니다
                scheduleList.innerHTML = ''; // 이전 시간표를 지웁니다
                selectedSub = event.target.textContent;

                // 선택된 항목을 강조 표시합니다
                document.querySelectorAll('#sub-list .list-group-item').forEach(item => item.classList.remove('active', 'selected'));
                event.target.classList.add('active', 'selected');

                movies.forEach(movie => {
                    const listItem = document.createElement('li');
                    listItem.className = 'list-group-item';
                    listItem.textContent = movie;
                    listItem.setAttribute('data-dates', '17 월, 18 화, 19 수, 20 목, 21 금, 22 토, 23 일');
                    movieList.appendChild(listItem);
                });

                updateSelectedInfo();
            }
        });

        movieList.addEventListener('click', function (event) {
            if (event.target.tagName === 'LI') {
                const dates = event.target.getAttribute('data-dates').split(', ');
                dateList.innerHTML = ''; // 이전 날짜를 지웁니다
                scheduleList.innerHTML = ''; // 이전 시간표를 지웁니다
                selectedMovie = event.target.textContent;

                // 선택된 항목을 강조 표시합니다
                document.querySelectorAll('#movie-list .list-group-item').forEach(item => item.classList.remove('active', 'selected'));
                event.target.classList.add('active', 'selected');

                dates.forEach(date => {
                    const dateButton = document.createElement('button');
                    dateButton.className = 'btn btn-light date-button';
                    dateButton.textContent = date;
                    dateButton.addEventListener('click', function () {
                        selectedDate = date;
                        document.querySelectorAll('.date-button').forEach(item => item.classList.remove('active'));
                        dateButton.classList.add('active');
                        updateScheduleList();
                        updateSelectedInfo();
                    });
                    dateList.appendChild(dateButton);
                });

                updateSelectedInfo();
            }
        });

        function updateScheduleList() {
            if (selectedDate) {
                const times = ['10:00', '12:00', '14:00', '16:00', '18:00', '20:00', '22:00'];
                scheduleList.innerHTML = '';
                times.forEach(time => {
                    const listItem = document.createElement('li');
                    listItem.className = 'list-group-item';
                    listItem.textContent = time;
                    listItem.addEventListener('click', function () {
                        selectedSchedule = time;
                        document.querySelectorAll('#schedule-list .list-group-item').forEach(item => item.classList.remove('active', 'selected'));
                        listItem.classList.add('active', 'selected');
                        updateSelectedInfo();
                    });
                    scheduleList.appendChild(listItem);
                });
            }
        }

        function updateSelectedInfo() {
            // Update selected information dynamically
        }

        selectSeatButton.addEventListener('click', function () {
            const data = {
                selectedMain: selectedMain,
                selectedSub: selectedSub,
                selectedMovie: selectedMovie,
                selectedDate: selectedDate,
                selectedSchedule: selectedSchedule
            };

            fetch('next_page.html', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(data)
            })
                    .then(response => response.json())
                    .then(data => {
                        console.log('Success:', data);
                        // 페이지 이동 등 원하는 동작 수행
                    })
                    .catch((error) => {
                        console.error('Error:', error);
                    });
        });
    });
</script>
