    }
    .seat.possible {
        background-color: #8ccf9c;
    }
    .seat.hidden {
        visibility: hidden;
    }
    .seat-map-label {
        text-align: center;
        margin: 0;
        padding: 0;
    }
    .legend {
        display: flex;
