<style>
    .profile-pic img{
        width: 100px;
        height: 100px;
        background-color: #e9ecef;
        border-radius: 50%;
    }
    .list-group .active{
        background-color: #4b1b3a;
    }
</style>

<div class="col-md-3">
    <div class="text-center">
        <div class="profile-pic mb-3 mx-auto">
            <img src="{{sessionUser.imgFilename}}" class="movie-poster" alt="Exhuma">
        </div>
        <h5>{{sessionUser.name}}님</h5>
    </div>
    <div class="list-group mt-3 mb-5">
        <a href="/scrap/movie-list" class="list-group-item list-group-item-action text-center">0 <br>기대되는 영화</a>
        <a href="/mypage/detail-saw" class="list-group-item list-group-item-action text-center">11<br> 내가 본
            영화</a>
        <a href="/review-list" class="list-group-item list-group-item-action text-center">0<br> 내가 쓴 한줄평</a>
    </div>
</div>
<script>
    // 페이지 로드 시 로컬 스토리지에서 선택된 아이템 복원
    document.addEventListener('DOMContentLoaded', function() {
        const savedActiveIndex = localStorage.getItem('activeItemIndex');
        if (savedActiveIndex !== null) {
            const items = document.querySelectorAll('.list-group-item');
            items[savedActiveIndex].classList.add('active');
        }
    });

    // 클릭 이벤트 리스너 추가
    const items = document.querySelectorAll('.list-group-item');
    items.forEach((item, index) => {
        item.addEventListener('click', function() {
            // 모든 아이템에서 active 클래스 제거
            items.forEach(i => i.classList.remove('active'));
            // 클릭된 아이템에 active 클래스 추가
            this.classList.add('active');
            // 로컬 스토리지에 현재 활성화된 아이템 인덱스 저장
            localStorage.setItem('activeItemIndex', index);
        });
    });
</script>