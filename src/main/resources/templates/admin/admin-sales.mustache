{{> layout/header-admin}}
<style>

    /* 카드 컴포넌트 스타일 */
    .card {
        border: 1px solid #ddd;
        border-radius: 5px;
        padding: 15px;
        margin: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    /* 카드 헤더 스타일 */
    .card-header {
        font-size: 1.5em;
        font-weight: bold;
        margin-bottom: 15px;
        border-bottom: 1px solid #ddd;
        padding-bottom: 10px;
    }

    /* 카드 바디 스타일 */
    .card-body {
        overflow-x: auto;
    }

    /* 테이블 스타일 */
    .table {
        width: 100%;
        margin-bottom: 15px;
        border-collapse: collapse;
    }

    .table th, .table td {
        padding: 8px;
        text-align: left;
        border: 1px solid #ddd;
    }

    .table th {
        background-color: #f4f4f4;
    }
</style>

<!-- 메인 화면 -->
<div class="container mt-5">
    <h2>매출 관리</h2>
    <hr>
    <div class="card mt-4">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center">
                <!-- 총 매출과 수수료 금액 확인 표 -->
                <div class="mr-5">
                    <table class="table table-bordered">
                        <tbody>
                        <tr>
                            <th scope="row">총 매출</th>
                            <td>{{models.totalSales}}</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
                <!-- 검색 폼 -->
                <form action="/api/admin-sales-manage" method="get" class="form-inline search-form float-right mb-3">
                    <div class="form-group mr-2">
                        <select class="form-control" name="searchBy">
                            <option value="adminId">극장 이름</option>
                            <option value="brandName">영화 이름</option>
                        </select>
                    </div>
                    <div class="form-group mr-2">
                        <input type="text" class="form-control" placeholder="검색명" name="keyword">
                    </div>
                    <button type="submit" class="btn btn-primary">검색</button>
                </form>
            </div>

            <!-- 브랜드별 매출 목록 -->
            <table class="table">
                <thead>
                <tr>
                    <th>극장 이름</th>
                    <th>극장 주소</th>
                    <th>극장 번호</th>
                    <th>판매 금액</th>
                </tr>
                </thead>
                <tbody>
                {{#models.theaterSales}}
                <tr>
                    <td>{{theaterName}}</td>
                    <td>{{theaterAddress}}</td>
                    <td>{{theaterTel}}</td>
                    <td>{{theaterSales}}</td>
                </tr>
                {{/models.theaterSales}}
                </tbody>
            </table>
        </div>
    </div>
</div>

{{> layout/footer}}
