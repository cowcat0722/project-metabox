                backgroundColor: ['#6c757d', '#a0522d', '#6c757d', '#6c757d', '#6c757d'],
                borderColor: ['#6c757d', '#a0522d', '#6c757d', '#6c757d', '#6c757d'],
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            legend: {
                display: false,
            },
            scales: {
                y: {
                    beginAtZero: true,
                    ticks: {
                        stepSize: 10
                    }
                }
            }
        }
    });
</script>
