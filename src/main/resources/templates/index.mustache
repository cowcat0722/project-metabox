{{> layout/header}}

<link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap" rel="stylesheet"> <!-- 멋진 글꼴 추가 -->
<style>

    /* MOVIE 부분 */
    .movie-main img {
        width: 100%;
        border-radius: 5px;
        height: 500px; /* 이미지 높이 설정 */
    }

    .movie-chart img {
        width: 100%;
        border-radius: 5px;
    }
    .movie-chart .movie-item {
        position: relative; /* relative position 설정 */
        text-align: center;
    }
    .movie-chart .movie-item img {
        display: block;
        width: 100%;
        border-radius: 5px;
    }
    .movie-chart .movie-item .rank {
        position: absolute; /* absolute position 설정 */
        top: 10px; /* 이미지 위의 위치 설정 */
        left: 10px;
        font-size: 2rem;
        font-weight: bold;
        color: white;
        background: rgba(0, 0, 0, 0.5); /* 배경 색상 및 투명도 설정 */
        padding: 5px 10px;
        border-radius: 5px;
        font-family: 'Bebas Neue', cursive; /* 멋진 글꼴 적용 */
    }
    .movie-chart .movie-item p {
        margin: 5px 0;
    }
    .movie-chart .movie-item .rating {
        color: gold;
    }
    .movie-chart .movie-item .percentage {
        color: gray;
    }

    /* 공지 부분 CSS */
    .notice-box {
        border: 1px solid #ddd;
        border-radius: 5px;
        padding: 20px;
        margin-top: 20px;
        width: 80%;
    }
    .notice-box .notice-header {
        font-weight: bold;
        margin-bottom: 10px;
    }
    .notice-box .notice-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    .notice-box .notice-content .notice-text {
        flex-grow: 1;
    }
    .notice-box .notice-content .notice-more {
        margin-left: 10px;
    }
    .notice-box .customer-center {
        margin-top: 20px;
    }
    .notice-box .customer-center .customer-header {
        font-weight: bold;
        margin-bottom: 10px;
    }
    .notice-box .customer-center .customer-content {
        margin-bottom: 10px;
    }
    .notice-box .customer-center .btn-group {
        display: flex;
        justify-content: space-between;
    }

    /* 네비 및 메인 배너 */
    .navbar-brand img {
        height: 40px;
    }
    .main-banner {
        position: relative; /* 상대 위치 설정 */
        height: 500px; /* 배너 높이 설정 */
        color: white;
        text-align: center;
    }
    .main-banner .content {
        position: absolute; /* 절대 위치 설정 */
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%); /* 중앙 정렬 */
        z-index: 2; /* 텍스트를 이미지 위로 */
    }
    .main-banner h1 {
        font-size: 3rem;
        color: purple;
    }
    .main-banner p {
        font-size: 1.2rem;
        color: red;
    }
    .main-banner .btn {
        margin-top: 20px;
    }


    /* 전체보기 버튼 스타일 */
    .btn-custom {
        display: inline-flex;
        align-items: center;
        padding: 10px 20px;
        border: 1px solid #ddd;
        border-radius: 50px;
        background-color: white;
        color: black;
        text-decoration: none;
        font-size: 1rem;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .btn-custom .arrow {
        margin-left: 10px;
        font-size: 15px;
    }

    /* 더보기 버튼 스타일 */
    .btn-more {
        display: inline-flex;
        align-items: center;
        padding: 5px 10px;
        border: 1px solid #ddd;
        border-radius: 5px;
        background-color: white;
        color: black;
        text-decoration: none;
        font-size: 0.9rem;
        font-weight: bold;
    }

    .btn-custom:hover, .btn-more:hover {
        color: black; /* 기존 글자색 유지 */
        text-decoration: none; /* 밑줄 제거 */
    }
</style>

<!-- Main Banner -->
