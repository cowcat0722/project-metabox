<script>
    $(document).ready(function () {
        $('.faq-question').click(function () {
            $(this).next('.faq-answer').slideToggle();
        });
    });

    function searchFAQ() {
        const searchTerm = $('#search-input').val().toLowerCase();
        $('.faq-item').each(function () {
            const question = $(this).find('.faq-question').text().toLowerCase();
            if (question.includes(searchTerm)) {
                $(this).show();
            } else {
                $(this).hide();
            }
        });
    }

    function filterFAQ(category) {
        $('.table-category th').removeClass('active');
        if (category === 'all') {
            $('.faq-item').show();
            $('.table-category th:contains("전체")').addClass('active');
        } else {
            $('.faq-item').hide();
            $(`.faq-item[data-category="${category}"]`).show();
            $(`.table-category th:contains("${category}")`).addClass('active');
        }
    }
</script>
